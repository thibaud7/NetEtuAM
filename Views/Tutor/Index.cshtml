@model List<TutorModel>

@{
    ViewBag.Title = "Index";
}

<h2>Ensembles des tuteurs</h2>

<div>
    @using (Ajax.BeginForm("Search", "Tutor",
        new AjaxOptions
        {
            UpdateTargetId = "tutors",
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
        }, new { @class = "form-group" }))
    {
        <div class="input-group">
            <input type="text" name="recherche" class="form-control" placeholder="Recherche..."/>
            <span class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    }
</div>
<div id="tutors">

<table>
    <thead>
        <tr>
            <td>Prénom Nom</td>
            <td>Adresse </td>
            <td>Code Postal</td>
            <td>Ville</td>
            <td>Telephone</td>
            <td>Email</td>
            <td>Commentaire</td>
            <td>Editer</td>
        </tr>
    </thead>
    <tbody>
         @foreach (var tutor in Model) {
        <tr>
            <td> @Html.ActionLink(
                    linkText:  @tutor.firstName + " " + @tutor.lastName,
                    actionName: "Read",
                    controllerName: "Tutor",
                    routeValues: new
                    {
                        id = @tutor.id   
                    },
                    htmlAttributes : null
                )
            </td>
            <td>@tutor.address</td>
            <td>@tutor.postCode</td>
            <td>@tutor.town</td>
            <td>@tutor.tel</td>
            <td>@tutor.mail</td>
            <td>@tutor.comment</td>
            <td> @Html.ActionLink(
                    linkText:  "Editer",
                    actionName: "Edit",
                    controllerName: "Tutor",
                    routeValues: new
                    {
                        id = @tutor.id   
                    },
                    htmlAttributes : null
                )
            </td>
        </tr>
         }
    </tbody>
</table>
</div>