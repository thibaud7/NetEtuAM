@model EvaluationModel

@{
    ViewBag.Title = "Read";
}

<h2>Read</h2>

@Html.ActionLink(
    linkText:  @Model.classroomTitle,
    actionName: "Read",
    controllerName: "Classroom",
    routeValues: new
    {
        id = @Model.idClassroom  
    },
    htmlAttributes : new {
        target="_blank"
    }
);

@Html.ActionLink(
    linkText:  @Model.periodBegin + " / " + @Model.periodEnd,
    actionName: "Read",
    controllerName: "Period",
    routeValues: new
    {
        id = @Model.idPeriod  
    },
    htmlAttributes : new {
        target="_blank"
    }
);

@Html.ActionLink(
    linkText:  @Model.userName,
    actionName: "Read",
    controllerName: "User",
    routeValues: new
    {
        id = @Model.idUser
    },
    htmlAttributes : new {
        target="_blank"
    }
);

@Model.date

@Model.totalPoint

@foreach (var res in Model.resultats)
{
    @Html.ActionLink(
    linkText: @res.pupilFirstName + " " + @res.pupilLastName + " : " + @res.totalNote + "/" + @Model.totalPoint,
    actionName: "Read",
    controllerName: "Result",
    routeValues: new
    {
        id = @res.id
    },
    htmlAttributes: new
    {
        target = "_blank"
    }
);
}