@model ClassroomModel
@{
    ViewBag.Title = "Create";
}

<h2>Créer une classe</h2>


@{Html.BeginForm("Create", "Classroom");}

@Html.LabelFor(s => s.title)
@Html.TextBoxFor(s => s.title)
@Html.ValidationMessageFor(s => s.title)


@Html.Label("Année")
@Html.DropDownList("yearId", 
    new SelectList((IEnumerable<YearModel>) ViewData["annees"], "Id", "Year"))

@Html.Label("Etablissement")
@Html.DropDownList("establishmentId", 
    new SelectList((IEnumerable<EstablishmentModel>) ViewData["etablissements"], "Id", "Name"))

<input type="submit" value="Ajouter Classe"/>
@{Html.EndForm();}