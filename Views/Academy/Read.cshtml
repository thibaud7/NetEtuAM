@model AcademyModel

@{
    ViewBag.Title = "Read";
}

<h2>Académie de @Model.name</h2>


<table>
    <thead>
        <tr>
            <td>Ville </td>
            <td>Etablissement </td>

        </tr>
    </thead>
        <tbody>
@foreach (var x in Model.establishments) 
{
    <tr>
    <td>
    @x.town
    </td>

    <td>
            @Html.ActionLink(
                linkText: @x.name,
                actionName: "Read",
                controllerName: "Establishment",
                routeValues: new
                {
                    id = @x.id
                },
                htmlAttributes: new
                {
                    target = "_blank"
                }
            )        
    </td>
    </tr>
    
}
            </table>