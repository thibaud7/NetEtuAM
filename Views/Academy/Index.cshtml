@model List<AcademyModel>

@{
    ViewBag.Title = "Index";
}

<h2>Ensemble des académies</h2>

<table>
    <thead>
        <tr>
            <td>Nom </td>
            <td>Operation</td>
        </tr>
    </thead>
    <tbody>
         @foreach (var academy in Model)
         {
        <tr>
            <td> @Html.ActionLink(
                    linkText:  @academy.name,
                    actionName: "Read",
                    controllerName: "Academy",
                    routeValues: new
                    {
                        id = @academy.id   
                    },
                    htmlAttributes : null
                )
              </td>

              <td> @Html.ActionLink(
                    linkText:  "Editer",
                    actionName: "Edit",
                    controllerName: "Academy",
                    routeValues: new
                    {
                        id = @academy.id   
                    },
                    htmlAttributes : null
                )
              </td>
        </tr>
         }
    </tbody>
</table>
